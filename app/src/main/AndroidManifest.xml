<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.str1de.basketballappkotlin">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_basketball_logo_app_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_basketball_logo_app_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasketballAppKotlin"
        tools:targetApi="31">
        <activity
            android:name=".TrainingBookActivity"
            android:exported="false" />

        <activity android:name=".PlayerResultsActivity"
            android:exported="false"/>

        <activity
            android:name=".PositionThrowsActivity"
            android:exported="false"
            android:label="@string/title_activity_position_throws"
            android:theme="@style/Theme.BasketballAppKotlin.NoActionBar" />
        <activity
            android:name=".MenuActivity"
            android:exported="false" />
        <activity
            android:name=".TableActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".LaunchScreenActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>