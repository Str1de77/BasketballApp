<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_table_shot"
    tools:context=".Fragments.TableShotFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Table of throws"
        android:textColor="@color/black"
        android:fontFamily="@font/fredoka_one"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Number of throws:"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/show_all_throws"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Throws hits:"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/show_throws_hit"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/fredoka_one"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Throws miss:"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/show_throws_miss"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/fredoka_one"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </TableRow>

    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/player_results_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@drawable/corner_button"
        style="@style/RoundedCornerButton"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Player results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>